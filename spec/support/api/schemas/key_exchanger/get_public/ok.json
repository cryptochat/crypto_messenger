{
  "type": "object",
  "required": ["identifier", "public_key"],
  "properties": {
    "identifier": {
      "type": "string",
      "format": "uuid"
    },
    "public_key": {
      "type": "string",
      "pattern": "^(?:[A-Za-z0-9_-]{4})*(?:[A-Za-z0-9_-]{2}==|[A-Za-z0-9_-]{3}=|[A-Za-z0-9_-]{4})$"
    }
  }
}
